/* pages/course/course.wxss */
page {
    background: white;
    width: 100%;
    height: 100%;
    background-image: url("http://r.photo.store.qq.com/psc?/V51tNpWb2FonU036uaZ52J0vZx42hUZ3/45NBuzDIW489QBoVep5mcbEIWmSznNp9xiqwvjAtcaAFrCQDNZgscNShvFHXq78xOCdKctt536XkfZbJuFu4bbLrdplm39BY0nR*tZfZf34!/r");
    background-size: 100% 100%;
  }
.container{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items:center;
}
.avatar{
    width: 250rpx;
    height: 250rpx;
    margin-top: 5%;
    border-radius: 100px;
}
.motto{
    margin-top: 10%;
    font-size: 39rpx;
    font-weight: bold;
    color: #ed5a65;
}
.containers{
    width: 55%; 
    height: 100rpx; 
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: center;
    
  }
.journey-container{
    margin-top: 36%;
    margin-right: 10%;
    border: 1px solid #EA5A3C;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align: center;
}
.journey{
    font-size: 30rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #f0a1a8;
}

.journey-containers{
    margin-top: 150rpx;
    margin-left: 10rpx;
    border: 1px solid #EA5A3C;
    width: 190rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align: center;
}
.journeys{
    font-size: 30rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #f0a1a8;
}

.new_swiper {
    width: 710rpx;
    position: absolute;
    height: 100rpx;
    top: 30rpx;
    z-index: 66;
    left: 40rpx;
  }
  
  .new_swiper swiper-view {
    vertical-align: bottom;
  }
  
  .box_item {
    display: inline-block;
    height: 40rpx;
    background: #e9d7df;
    border-radius: 23rpx;
    box-sizing: border-box;
    padding: 0 16rpx 0;
    font-size: 20rpx;
    letter-spacing:5rpx;
    color: #d2357d;
    position: absolute;
    bottom: 0;
    line-height: 40rpx;
  }
  