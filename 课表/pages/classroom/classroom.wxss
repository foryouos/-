/* pages/course_schedule/course_schedule.wxss */
page {
    background: #f3f3f3;
    width: 100%;
    height: 100%;
  }
  .table-module {
    width: 750rpx; 
    height: 80%; 
    box-sizing: border-box;
    display: flex;
    margin-top: 2vh;
    background: white;
  }
  .left-policy-type {
    width: 98rpx; 
    height: 91.5%; 
    display: block; 
    box-sizing: border-box;
  }
  .empty-box {
    width: 76rpx; 
    display: block;
    box-sizing: border-box;
    height:8.9%;
    border-right: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    
  }
  
  .left-col-list {
    width: 78rpx;
    height: 20.1%; 
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-right: 1px solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
  }
  .shangxia{
    /* writing-mode: vertical-lr; */
    padding: 12.2vh;
  }
  .scroll-box {
    height:100%;
    /* white-space: nowrap; 它会防止元素中的文本换行，除非使用了一个br元素。 */
    display: flex;
    width: 90%; 
    box-sizing: border-box;
  }
  .limit-scroll{
    height: auto;
  }
  .top-scroll-box{
    width: 100vw;
    height: auto;
    /* height: 16.9vh; */
  }
  .top-scroll-add{
   width: 100vw;
   height: 16.9vh;
  }
  .scroll-view-item {
    width: 25vw;
    display: inline-block;
  }
  .company-name {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    width: 24.96vw;
    height: 8%;
    font-weight: bolder;
    /* background: lavender; */
    /* border-top: 1rpx solid     #696969;
    border-right: 1rpx solid  #696969;
   border-bottom: 1rpx solid  #696969; */
     color: rebeccapurple;
    border-right: 1rpx solid #e5e5e5; 
     border-bottom: 1rpx solid #e5e5e5;
  }
  
  .price-box {
    height: 18.2%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    border-right: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
  }
  .price {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color:    #7c2929;
    font-size: 28rpx;
    border-right: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    letter-spacing: 1rpx;
    flex-direction: column;
    text-align: center;
  }
  .picker{
    /* display: fixed; */
    color: #2fd39c;
    border: 2px solid #126bae;
    width: 180rpx;
    height: 55rpx;
    border-radius: 5px;
    background-color:antiquewhite;
 

}
.containers{
  display: flex;
  justify-content:center;
  position:absolute;
  bottom: 10%;
  left: 39%;
}
.picker_text{
  font-size: 36rpx;
  font-weight: bold;
  color: #bf3553;
  border: #2fd39c;
  display: flex;
  justify-content:center

}